{
  "name": "ceramic-web",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "nuxt dev",
    "dev:local": "node scripts/setup-local-env.js && nuxt dev",
    "dev:prod": "node scripts/setup-prod-env.js && nuxt dev",
    "build": "nuxt build",
    "build:local": "cross-env NUXT_PUBLIC_API_BASE=http://localhost:9090 NUXT_PUBLIC_SITE_URL=http://localhost:3000 nuxt build",
    "build:prod": "cross-env NUXT_PUBLIC_API_BASE=https://api.svrve.com NUXT_PUBLIC_SITE_URL=https://svrve.com nuxt build",
    "generate": "nuxt generate",
    "generate:prod": "cross-env NUXT_PUBLIC_API_BASE=https://api.svrve.com NUXT_PUBLIC_SITE_URL=https://svrve.com nuxt generate",
    "preview": "nuxt preview",
    "start": "nuxt preview",
    "deploy": "npm run build:prod && npm run start"
  },
  "dependencies": {
    "nuxt": "^3.21.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "dotenv": "^17.2.3"
  }
}
